{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "declarationDir": "dist",
    "diagnostics": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": ["es2017", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "compiled",
    "sourceMap": true,
    "target": "es2017",
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
